# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/transaction_tracking

# Application Configuration
PROJECT_NAME=Transaction Tracking API
VERSION=0.1.0
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging Configuration
LOG_MAX_FILES=5
LOG_MAX_SIZE_MB=5
LOG_EXCLUDED_PATHS=["/health", "/docs", "/redoc", "/openapi.json"]
LOG_LEVEL=INFO

# JWT Configuration (generate secret with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=10080

# Exchange Rate API Configuration (get API key from exchangerate-api.com)
EXCHANGE_RATE_API_KEY=your-api-key-here
EXCHANGE_RATE_API_TIMEOUT_SECONDS=10
